@model ProductStoreMVC.Models.Product

@{
    ViewData["Title"] = "Chi tiết Sản phẩm";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Mã sản phẩm:</strong>
                        </div>
                        <div class="col-sm-8">
                            #@Model.Id
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>@Html.DisplayNameFor(model => model.Name):</strong>
                        </div>
                        <div class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>@Html.DisplayNameFor(model => model.Price):</strong>
                        </div>
                        <div class="col-sm-8">
                            @Html.DisplayFor(model => model.Price) đồng
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>@Html.DisplayNameFor(model => model.CategoryId):</strong>
                        </div>
                        <div class="col-sm-8">
                            @(Model.Category != null ? Model.Category.Name : "")
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-list"></i> Danh sách
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
                           onclick="return confirm('Bạn có chắc muốn xóa sinh viên này?')">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
